    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="row">
                <div class="col-xs-6">
                    <ul class="nav navbar-nav">
                        <li style="float: left">@Html.ActionLink("J.R. Abramczyk", "Index", "Home")</li>
                    </ul>
                </div>
                <div class="col-xs-6">
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav newLayout" style="float: right">
                            <li>@Html.ActionLink("Experience", "Experience", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
